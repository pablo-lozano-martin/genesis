# Application Settings
APP_NAME=Genesis
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# Security Settings
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# LLM Provider Selection (openai, anthropic, gemini, ollama)
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Configuration
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-2.0-flash

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Database Settings (kept for backward compatibility)
MONGODB_URL=mongodb://mongodb:27017
MONGODB_DB_NAME=genesis

# Dual Database Settings
MONGODB_APP_URL=mongodb://mongodb:27017
MONGODB_APP_DB_NAME=genesis_app
MONGODB_LANGGRAPH_URL=mongodb://mongodb:27017
MONGODB_LANGGRAPH_DB_NAME=genesis_langgraph

# Production MongoDB with Authentication (optional)
# MONGO_ROOT_USERNAME=admin
# MONGO_ROOT_PASSWORD=your-secure-password-here

# ChromaDB Configuration
CHROMA_MODE=embedded
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHROMA_COLLECTION_NAME=genesis_documents

# Retrieval Settings
RETRIEVAL_TOP_K=5
RETRIEVAL_SIMILARITY_THRESHOLD=0.5
RETRIEVAL_CHUNK_SIZE=512
RETRIEVAL_CHUNK_OVERLAP=50

# Frontend Settings
VITE_API_URL=http://localhost:8000

# Production Settings
# API_URL=https://your-domain.com
